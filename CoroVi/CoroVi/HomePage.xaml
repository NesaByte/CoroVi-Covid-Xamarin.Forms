<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="CoroVi.HomePage"
             Background="#EEEFFB"
             >
    <ContentPage.Content>
        <StackLayout>
            

            <Grid HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="5,5,5,5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <yummy:PancakeView Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" BackgroundColor="#00AEC7" CornerRadius="20,20,20,20" HorizontalOptions="FillAndExpand" HeightRequest="150">
                </yummy:PancakeView>

                <yummy:PancakeView Grid.Row="0" Grid.Column="0" BackgroundColor="#00AEC7" Padding="5,5,5,5" CornerRadius="20,20,20,20" HorizontalOptions="FillAndExpand" HeightRequest="150">
                    <Label x:Name="Lbl_country" Text="Global" FontSize="30" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                </yummy:PancakeView>
                
                <yummy:PancakeView Grid.Row="0" Grid.Column="1" BackgroundColor="#68CAD7" CornerRadius="40,20,5,40" Margin="5,5,5,5" HorizontalOptions="FillAndExpand" HeightRequest="150">
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                        <Label Text="Total Confirmed Cases"/>
                        <Label x:Name="TotalConfirmed" Text="TotalConfirmed"/>
                    </StackLayout>
                </yummy:PancakeView>

                <yummy:PancakeView Grid.Row="1" Grid.Column="1" BackgroundColor="#FB9C80" CornerRadius="5,40,40,20" Margin="5,5,5,5" HorizontalOptions="FillAndExpand" HeightRequest="150">
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                        <Label Text="Total Deaths"/>
                        <Label x:Name="TotalDeaths" Text="TotalRecovered"/>
                    </StackLayout>
                </yummy:PancakeView>

                <yummy:PancakeView Grid.Row="1" Grid.Column="0" BackgroundColor="#AABBF3" CornerRadius="40,5,20,40" Margin="5,5,5,5" HorizontalOptions="FillAndExpand" HeightRequest="150">
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                        <Label Text="Total Recovered"/>
                        <Label x:Name="TotalRecovered" Text="TotalDeaths"/>
                    </StackLayout>
                    
                </yummy:PancakeView>
            </Grid>

            <Grid HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>

                </Grid.ColumnDefinitions>

                <Entry Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="countryName" Placeholder="Name" HorizontalOptions="FillAndExpand" Focused="Handle_Focused" />

                <Button Grid.Row="0" Grid.Column="2" x:Name="Btn_country" Text="Enter"  Clicked="Btn_country_clicked"/>


            </Grid>

            <ListView x:Name="summaryList" HasUnevenRows="True" Background="pink">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>

                                <StackLayout Padding="0,13" >
                                    <StackLayout>
                                        <Grid HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="10,0,10,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="100" />
                                                <RowDefinition Height="100" />
                                                <RowDefinition Height="100" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>

                                            <yummy:PancakeView Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" BackgroundColor="#00AEC7" CornerRadius="20,20,20,20" HorizontalOptions="FillAndExpand" HeightRequest="150">
                                                <Label Text="{Binding Country}"  VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                                            </yummy:PancakeView>

                                            <yummy:PancakeView Grid.Row="0" Grid.Column="1" BackgroundColor="#68CAD7" CornerRadius="40,10,10,40" HorizontalOptions="FillAndExpand" HeightRequest="150">
                                                <Label Text="{Binding Confirmed}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                                            </yummy:PancakeView>

                                            <yummy:PancakeView Grid.Row="1" Grid.Column="1" BackgroundColor="#AABBF3" CornerRadius="40,10,10,40" HorizontalOptions="FillAndExpand" HeightRequest="150">
                                                <Label Text="{Binding Deaths}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                                            </yummy:PancakeView>

                                            <yummy:PancakeView Grid.Row="2" Grid.Column="1" BackgroundColor="#FB9C80" CornerRadius="40,10,10,40" HorizontalOptions="FillAndExpand" HeightRequest="150">
                                                <Label Text="{Binding Recovered}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                                            </yummy:PancakeView>
                                        </Grid>

                                    </StackLayout>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>